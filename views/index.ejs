<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Arknights Crossover | Stats</title>
    <link rel="shortcut icon" href="<%=fav[0].favicon%>" type="image/x-icon">
    <link rel="stylesheet" href="/css/index.css">
    <script defer src="/js/loading.js"></script>
    <script defer src="/js/main.js"></script>
    <script defer src="/js/parallax.js"></script>
    <script defer src="/js/selectors.js"></script>
    <script defer src="/js/initialAnimations.js"></script>
</head>
<body>
    <div class="background">
    </div>
    <nav>
        <div class="current">
            <img src="<%=tabImg[0].tab%>" alt="">
            <div class="nav_fold">
                <div>
                    <img src="<%=tabImg[0].tab%>" alt="">
                    <a href="">
                        HOME
                    </a>
                </div>
                <div>
                    <img src="<%=tabImg[0].tab%>" alt="">
                    <a href="">
                        NEWS
                    </a>
                </div>
                <div>
                    <img src="<%=tabImg[0].tab%>" alt="">
                    <a href="">
                        WALLPAPPER
                    </a>
                </div>
                <div>
                    <img src="<%=tabImg[0].tab%>" alt="">
                    <a href="">
                        MEDIA
                    </a>
                </div>
            </div>
            <span>
                CHARACTER
            </span>
        </div>
        <hr>
        <span>
            OVERVIEW | STATS
        </span>
        <hr>
        <img class="logo" src="<%=logo[0].logo%>" alt="">
    </nav>
    <div class="content_wrap" loadHide>
        <div class="left_panel" id="left_panel">
            <% if (!!character[0].image.factionImage) { %>
                <img class="faction" parallaxOffset="0.5" src="<%=character[0].image.factionImage%>" alt="">
            <% } %>
            <div class="class" parallaxOffset="1.5">
                <% if (character[0].class === "Caster") { %>
                    <img src="<%=classImage[0].classIcon.caster%>" alt="">    
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        キャスター
                    </span>

                <% } else if (character[0].class === "Specialist") { %>
                    <img src="<%=classImage[0].classIcon.specialist%>" alt="">    
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        スペシャリスト
                    </span>
                        
                <% } else if (character[0].class === "Defender") { %>
                    <img src="<%=classImage[0].classIcon.defender%>" alt="">   
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        ディフェンダー
                    </span>
                        
                <% } else if (character[0].class === "Medic") { %>
                    <img src="<%=classImage[0].classIcon.medic%>" alt="">   
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        メディック
                    </span>

                <% } else if (character[0].class === "Vanguard") { %>
                    <img src="<%=classImage[0].classIcon.vanguard%>" alt="">
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        ヴァンガード
                    </span>

                <% } else if (character[0].class === "Guard") { %>
                    <img src="<%=classImage[0].classIcon.guard%>" alt=""> 
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        ガード
                    </span>

                <% } else if (character[0].class === "Sniper") { %>
                    <img src="<%=classImage[0].classIcon.sniper%>" alt=""> 
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        スナイパー
                    </span>

                <% } else if (character[0].class === "Supporter") { %>
                    <img src="<%=classImage[0].classIcon.supporter%>" alt="">               
                    <span>
                        <%=character[0].class%>
                    </span>
                    <span>
                        サポーター
                    </span>

                <% } else { %>
                    <span>
                        <%=character[0].class%>
                    </span>
                <% }; %>
            </div>
            <div class="stars" parallaxOffset="1.25">
                <% if (character[0].star == 1) { %>
                    <span>★</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>

                <% } else if (character[0].star == 2) { %>
                    <span>★</span><span>★</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>

                <% } else if (character[0].star == 3) { %>
                    <span>★</span><span>★</span><span>★</span><span>☆</span><span>☆</span><span>☆</span>

                <% } else if (character[0].star == 4) { %>
                    <span>★</span><span>★</span><span>★</span><span>★</span><span>☆</span><span>☆</span>

                <% } else if (character[0].star == 5) { %>
                    <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span><span>☆</span>

                <% } else if (character[0].star == 6) { %>
                    <span>★</span><span>★</span><span>★</span><span>★</span><span>★</span><span>★</span>

                <% } else { %>
                    <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                <% }; %>
            </div>
            <div class="desc">
                <p textWriteAni>
                    <%=character[0].description%>
                </p>
            </div>
            <div class="special">
                <p textWriteAni>
                    <%=character[0].speciality%>
                </p>
            </div>
        </div>
        <div class="character_display">
            <img class="character_banner" src="<%=character[0].image.bannerImage%>" alt="" srcset="">
            <img class="character_image" src="<%=character[0].image.characterImage%>" alt="" srcset="">
        </div>
        <div class="right_panel" id="right_panel">
            <div class="name" parallaxOffset="1.5" id="characterName">
                <% if (!!character[0].image.nameImage) { %>
                    <img src="<%=character[0].image.nameImage%>" alt="">
                <% } else { %>
                    <span>
                        <%=character[0].name%>
                    </span>
                <% }; %>
            </div>
            <div class="skills">
                <div id="skill_selector"></div>
                <div class="active">
                    <div>
                        <img src="<%=character[0].skill.active['1'].img%>" alt="">
                        <p textWriteAni>
                            <%=character[0].skill.active['1'].desc%>
                        </p>
                    </div>
                    <div>
                        <img src="<%=character[0].skill.active['2'].img%>" alt="">
                        <p textWriteAni>
                            <%=character[0].skill.active['2'].desc%>
                        </p>
                    </div>
                    <div>
                        <img src="<%=character[0].skill.active['3'].img%>" alt="">
                        <p textWriteAni>
                            <%=character[0].skill.active['3'].desc%>
                        </p>
                    </div>
                </div>
                <div class="passive">
                    <div>
                        <img src="<%=character[0].skill.passive['1'].img%>" alt="">
                        <p textWriteAni>
                            <%=character[0].skill.passive['1'].desc%>
                        </p>
                    </div>
                    <div>
                        <img src="<%=character[0].skill.passive['2'].img%>" alt="">
                        <p textWriteAni>
                            <%=character[0].skill.passive['2'].desc%>
                        </p>
                    </div>
                    <div>
                        <img src="<%=character[0].skill.passive['3'].img%>" alt="">
                        <p textWriteAni>
                            <%=character[0].skill.passive['3'].desc%>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <% if (icon.length <= 4) { %>
        <div class="gallery" loadHide>
            <% icon.forEach(function(object) { %>
                <a href="/character/<%=object.name%>">
                    <img src="<%=object.image.icon%>" alt="">
                </a>
            <% }); %>
        </div>
    <% } else { %>
        <div class="gallery" loadHide>
            <button id="backward" type="button" onclick="gallerySlide(-1)">
                <img src="<%=btn[0].button.back%>" alt="">
            </button>

            <div id="gallery_icon">
                <% icon.forEach(function(object) { %>
                    <a href="/character/<%=object.name%>">
                        <img src="<%=object.image.icon%>" alt="">
                    </a>
                <% }); %>
            </div>

            <button id="forward" type="button" onclick="gallerySlide(1)">
                <img src="<%=btn[0].button.next%>" alt="">
            </button>
        </div>
    <% }; %>

    <footer>
        <img src="<%=tabImg[0].tab%>" alt="">
        <hr>
        <div>
            <span>
                All rights belong to the original creators. Mainly YOSTAR/Arknights & ZUN/Touhou
            </span>
            <span>
                Project by <a href="https://github.com/YunruKnowledge">YunruKnowledge</a> and <a href="https://github.com/LHvv">LHvv</a>
            </span>
        </div>
        <hr>
        <img src="<%=tabImg[0].tab%>" alt="">
    </footer>
</body>
</html>